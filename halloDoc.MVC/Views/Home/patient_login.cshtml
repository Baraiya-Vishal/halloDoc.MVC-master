

@{
    ViewData["Title"] = "Create-family-friend-request";
    Layout = "~/Views/Shared/_background.cshtml";
   
}


<link rel="stylesheet" href="~/css/login.css"/>

@if (@TempData["data"] != null)
{
    <div id="popupdiv" style=" color:red;" class="text-center">
        @TempData["data"]
    </div>
}
     
                 
    <div class="  align-items-center position-relative d-flex justify-content-between flex-column">
    <div class="logo">
        <img class="doc-img" src="~/images/logo-PhotoRoom.png-PhotoRoom.png" alt="logo">
    </div>
        <div class="mt-1">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <button type="button" class="btn btn-light bg-white bg-transparent mb-4 border-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="myfill" height="16" width="12" viewBox="0 0 384 512">
                        <path class="text-theme" d="M380.6 81.7c7.9 15.8 1.5 35-14.3 42.9L103.6 256 366.3 387.4c15.8 7.9 22.2 27.1 14.3 42.9s-27.1 22.2-42.9 14.3l-320-160C6.8 279.2 0 268.1 0 256s6.8-23.2 17.7-28.6l320-160c15.8-7.9 35-1.5 42.9 14.3z"/>
                    </svg>
                    <span class="text-theme bg-transparent">Back</span>
                </button></a>

                <h2 class="myheading  pb-3">Login to Your account</h2>

        <form class="myform" asp-controller="" asp-action="" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span  class="text-danger mb-2"></span>
                <div class="form-floating mb-4 myinput ">
                <input type="email" class="form-control  bg-transparent  input-area" name="Username" id="Username"
                        placeholder="name@example.com">
                <label for="Username" class="from-lable">Email</label> 
               
                    <div class=" position-absolute top-0 end-0 me-3 mt-2">
                        <button type="button" class="btn btn-light bg-white bg-transparent border-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                              </svg>
                    </button>
                    </div>
            </div>     <span class="text-danger mb-2"></span>
                <div class="form-floating position-relative mb-4">
             
                <input type="password" class="form-control bg-transparent" name="Password" id="Password" placeholder="Password">
                    <label for="Password">Password</label>
                    <div class=" position-absolute top-0 end-0 me-3 bg-transparent mt-2">
                        <button type="button"  onclick="showpass()" class="btn btn-light  bg-white bg-transparent border-0">
                    <img id="eye" src="~/images/eye-slash.svg" alt="">
                    </button>
                    </div>
                  </div>

                  

                <button type="submit" id="submit" class="btn btn-primary form-control  text-white border mybtn border-white mb-4">Log in</button>
                <div class="forgot text-theme text-center">
                    <a asp-controller="Home" asp-action="Patient_forgot_password">Forgot Password ?</a>
                </div>
            </form>
        </div>
       
        
    </div>

